{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/a2aproject/a2a/blob/main/cli/schemas/agentcard.json",
  "title": "AgentCard",
  "description": "A2A Protocol Agent Card schema",
  "type": "object",
  "required": [
    "protocolVersion",
    "name",
    "description",
    "version",
    "capabilities",
    "defaultInputModes",
    "defaultOutputModes",
    "skills"
  ],
  "properties": {
    "protocolVersion": {
      "type": "string",
      "description": "The version of the A2A protocol this agent supports",
      "pattern": "^\\d+\\.\\d+$"
    },
    "name": {
      "type": "string",
      "description": "A human readable name for the agent",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "A human-readable description of the agent",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "The version of the agent",
      "minLength": 1
    },
    "capabilities": {
      "type": "object",
      "description": "A2A Capability set supported by the agent",
      "properties": {
        "streaming": {
          "type": "boolean",
          "description": "Indicates if the agent supports streaming responses"
        },
        "pushNotifications": {
          "type": "boolean",
          "description": "Indicates if the agent supports push notifications"
        },
        "stateTransitionHistory": {
          "type": "boolean",
          "description": "Indicates if the agent provides state transition history"
        },
        "extensions": {
          "type": "array",
          "description": "A list of protocol extensions supported by the agent",
          "items": {
            "$ref": "#/definitions/AgentExtension"
          }
        }
      },
      "additionalProperties": false
    },
    "defaultInputModes": {
      "type": "array",
      "description": "The set of interaction modes supported by the agent for input",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "defaultOutputModes": {
      "type": "array",
      "description": "The media types supported as outputs from this agent",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "skills": {
      "type": "array",
      "description": "Skills represent abilities of an agent",
      "items": {
        "$ref": "#/definitions/AgentSkill"
      },
      "minItems": 1
    },
    "supportedInterfaces": {
      "type": "array",
      "description": "Ordered list of supported interfaces",
      "items": {
        "$ref": "#/definitions/AgentInterface"
      }
    },
    "provider": {
      "$ref": "#/definitions/AgentProvider"
    },
    "documentationUrl": {
      "type": "string",
      "description": "A URL to provide additional documentation about the agent",
      "format": "uri"
    },
    "securitySchemes": {
      "type": "object",
      "description": "The security scheme details used for authenticating with this agent",
      "additionalProperties": {
        "$ref": "#/definitions/SecurityScheme"
      }
    },
    "security": {
      "type": "array",
      "description": "Security requirements for contacting the agent",
      "items": {
        "type": "object"
      }
    },
    "supportsExtendedAgentCard": {
      "type": "boolean",
      "description": "Whether the agent supports providing an extended agent card"
    },
    "signatures": {
      "type": "array",
      "description": "JSON Web Signatures computed for this AgentCard",
      "items": {
        "$ref": "#/definitions/AgentCardSignature"
      }
    },
    "iconUrl": {
      "type": "string",
      "description": "An optional URL to an icon for the agent",
      "format": "uri"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "AgentSkill": {
      "type": "object",
      "required": ["id", "name", "description"],
      "properties": {
        "id": {
          "type": "string",
          "description": "A unique identifier for the skill",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "description": "A human-readable name for the skill",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the skill",
          "minLength": 1
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "inputModes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "outputModes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "AgentInterface": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "description": "The URL of the interface"
        },
        "transport": {
          "type": "string",
          "description": "The transport protocol",
          "enum": ["jsonrpc", "grpc", "rest"]
        }
      },
      "additionalProperties": false
    },
    "AgentProvider": {
      "type": "object",
      "required": ["url", "organization"],
      "properties": {
        "url": {
          "type": "string",
          "description": "A URL for the agent provider's website"
        },
        "organization": {
          "type": "string",
          "description": "The name of the agent provider's organization"
        }
      },
      "additionalProperties": false
    },
    "AgentExtension": {
      "type": "object",
      "required": ["uri"],
      "properties": {
        "uri": {
          "type": "string",
          "description": "The unique URI identifying the extension"
        },
        "description": {
          "type": "string",
          "description": "A human-readable description of the extension"
        },
        "required": {
          "type": "boolean",
          "description": "If true, the client must understand the extension"
        },
        "params": {
          "type": "object",
          "description": "Extension-specific configuration parameters"
        }
      },
      "additionalProperties": false
    },
    "SecurityScheme": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "apiKeySecurityScheme": {
          "$ref": "#/definitions/APIKeySecurityScheme"
        },
        "httpAuthSecurityScheme": {
          "$ref": "#/definitions/HTTPAuthSecurityScheme"
        },
        "oauth2SecurityScheme": {
          "$ref": "#/definitions/OAuth2SecurityScheme"
        },
        "openIdConnectSecurityScheme": {
          "$ref": "#/definitions/OpenIDConnectSecurityScheme"
        },
        "mtlsSecurityScheme": {
          "$ref": "#/definitions/MutualTLSSecurityScheme"
        }
      }
    },
    "APIKeySecurityScheme": {
      "type": "object",
      "required": ["location", "name"],
      "properties": {
        "description": {
          "type": "string"
        },
        "location": {
          "type": "string",
          "enum": ["query", "header", "cookie"]
        },
        "name": {
          "type": "string"
        }
      }
    },
    "HTTPAuthSecurityScheme": {
      "type": "object",
      "required": ["scheme"],
      "properties": {
        "description": {
          "type": "string"
        },
        "scheme": {
          "type": "string"
        },
        "bearerFormat": {
          "type": "string"
        }
      }
    },
    "OAuth2SecurityScheme": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "flows": {
          "type": "object"
        },
        "oauth2MetadataUrl": {
          "type": "string"
        }
      }
    },
    "OpenIDConnectSecurityScheme": {
      "type": "object",
      "required": ["openIdConnectUrl"],
      "properties": {
        "description": {
          "type": "string"
        },
        "openIdConnectUrl": {
          "type": "string"
        }
      }
    },
    "MutualTLSSecurityScheme": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        }
      }
    },
    "AgentCardSignature": {
      "type": "object",
      "required": ["protected", "signature"],
      "properties": {
        "protected": {
          "type": "string",
          "description": "The protected JWS header"
        },
        "signature": {
          "type": "string",
          "description": "The computed signature"
        },
        "header": {
          "type": "object",
          "description": "The unprotected JWS header values"
        }
      }
    }
  }
}
